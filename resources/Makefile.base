#From caller
IRODSDIR = ../$(IRODSTOPDIR)
SODIR = ../$(SOTOPDIR)

FULLTARGET = $(SODIR)/$(TARGET)

OBJS = $(patsubst %.cpp, $(OBJDIR)/%.o, $(SRCS))

#include $(IRODSDIR)/config/config.mk
#include $(IRODSDIR)/config/platform.mk
OS_platform=linux

GCC = g++ -DRODS_SERVER 

INC = -I/usr/include/irods \
      -I$(LIBARCHIVE_DIR)/libarchive/ \
      -I/usr/include/irods/jansson-2.7/src/ \
      -I/usr/include/irods/boost

MY_CFLAG += $(INC)

ifeq ($(OS_platform), osx_platform)
LDADD += "-Wl,-undefined,dynamic_lookup"
else
LDADD += "-Wl,-E"
endif

LDADD += /usr/lib/irods/externals/libjansson.a

ifeq ($(IRODS_BUILD_COVERAGE), 1)
GCC += -fprofile-arcs -ftest-coverage -lgcov
OBJS = 
%.o: %.cpp
	$(GCC) $(CFLAGS) $(INC) -D$(OS_platform) -fPIC -c -g -o $@ $<
endif

.PHONY: clean

default: $(FULLTARGET)

clean:
	@-rm -f $(FULLTARGET) > /dev/null 2>&1
	@-rm -f $(OBJS) > /dev/null 2>&1
	@-rm -f *.o > /dev/null 2>&1

$(FULLTARGET): $(OBJS)
	@-mkdir -p $(SODIR) > /dev/null 2>&1
	$(V_at)$(GCC) $(LDRFLAGS) -D$(OS_platform) -fPIC $(LDADD) -shared -o $(FULLTARGET) $(OBJS) $(EXTRALIBS)

$(OBJDIR)/%.o: %.cpp
	$(V_at)$(GCC) $(MY_CFLAG) -D$(OS_platform) -fPIC -c -g -o $@ $<
